<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:arc="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="center">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView_secondfm_place"
            android:scaleType="fitXY"
            android:src="@drawable/secondfm"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:padding="30dp"
            android:id="@+id/imageView_secondfm_play_pause"
            android:alpha="0.4"
            android:src="@drawable/play_pause"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="100dp"
            android:padding="30dp"
            android:id="@+id/imageView_second_right"
            android:alpha="0.4"
            android:src="@drawable/play_pause"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="张婷"
            android:layout_margin="30dp"
            android:layout_marginBottom="40dp"
            android:textColor="#000"
            android:id="@+id/textView_second_person"
            android:layout_gravity="right|bottom"/>


    </FrameLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="25dp"
            android:layout_margin="35dp"
            android:id="@+id/animation1"
            android:src="@anim/animation1"
            android:layout_gravity="left|center" />
    <!--
        <com.capricorn.ArcMenu
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="25dp"
            android:layout_margin="35dp"
            android:src="@anim/animation1"
            arc:fromDegrees="@dimen/menuFromDegrees"
            arc:toDegrees="@dimen/menuToDegrees"
            arc:childSize="@dimen/menuChildSize"
            android:id="@+id/arc_menu_2"
            />
            -->


    </LinearLayout>


</LinearLayout>